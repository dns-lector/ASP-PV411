@using ASP_PV411.Middleware
@{
    bool isAuthenticated = Context.Items.ContainsKey(AuthSessionMiddleware.SessionKey);
    String? userName = isAuthenticated ?
        ((ASP_PV411.Data.Entities.User)
            Context.Items[AuthSessionMiddleware.SessionKey]!).Name
        : null;
    String? userLetter = isAuthenticated ? userName![0].ToString() : null;
    String? userTitle = isAuthenticated ? userName : null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP-PV411</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP-PV411.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ASP-PV411</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Intro">Intro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Razor">Razor</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Controllers" title="Контролери"><i class="bi bi-sign-intersection-y"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Db" title="База даних. Контекст"><i class="bi bi-database"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Middleware" title="Middleware. Утримання авторизації"><i class="bi bi-arrow-bar-right"></i></a>
                        </li>
                    </ul>
                        @if (isAuthenticated)
                        {
						<div title="@userTitle">@userLetter</div>
                        <a href="?logout" class="btn btn-outline-secondary"
                            title="Вихід з авторизованого режиму">
                            <i class="bi bi-box-arrow-left"></i>
                        </a>
                        }
                        else
                        {
						<!-- Button trigger modal -->
						<button type="button" class="btn btn-outline-secondary"
								data-bs-toggle="modal" data-bs-target="#authModal">
							<i class="bi bi-box-arrow-in-right"></i>
						</button>
                        }
                        
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ASP-PV411 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Modal -->
    <div class="modal fade" id="authModal" tabindex="-1" aria-labelledby="authModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="authModalLabel">Вхід до сайту</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="auth-form">
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="login-addon"><i class="bi bi-key"></i></span>
                            <input type="text" class="form-control "
                                   name="user-login" placeholder="Login"
                                   aria-label="Login" aria-describedby="login-addon">
                        </div>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="user-password-addon"><i class="bi bi-lock"></i></span>
                            <input type="password" class="form-control "
                                   name="user-password" placeholder="Password"
                                   aria-label="Password" aria-describedby="user-password-addon">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div id="auth-error" class="alert alert-danger py-2" role="alert">
                        A simple danger alert—check it out!
                    </div>
                    <button type="button" class="btn btn-secondary py-2" data-bs-dismiss="modal">Скасувати</button>
                    <button type="submit" class="btn btn-primary py-2" form="auth-form">Вхід</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
