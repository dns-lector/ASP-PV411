@{
    ViewData["Title"] = "Sign Up";
}

<div class="text-center">
    <h1 class="display-4">Реєстрація нового користувача</h1>
</div>

<form id="signup-form" class="border m-3 p-3" method="post">
	<div class="row">
		<div class="col">
			<div class="input-group mb-3">
				<span class="input-group-text" id="username-addon"><i class="bi bi-person-vcard"></i></span>
				<input type="text" class="form-control "
					   name="user-name" placeholder="Username"
					   aria-label="Username" aria-describedby="username-addon">
				<div class="invalid-feedback">
					Це необхідне поле
				</div>
			</div>
		</div>
		<div class="col">
			<div class="input-group mb-3">
				<span class="input-group-text" id="user-email-addon"><i class="bi bi-envelope-at"></i></span>
				<input type="email" class="form-control"
					   name="user-email" placeholder="E-mail"
					   aria-label="E-mail" aria-describedby="user-email-addon">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="input-group mb-3">
				<span class="input-group-text" id="user-login-addon"><i class="bi bi-key"></i></span>
				<input type="text" class="form-control"
					   name="user-login" placeholder="Login"
					   aria-label="Login" aria-describedby="user-login-addon">
			</div>
		</div>
		<div class="col">
			<div class="input-group mb-3">
				<span class="input-group-text" id="user-password-addon"><i class="bi bi-lock"></i></span>
				<input type="password" class="form-control "
					   name="user-password" placeholder="Password"
					   aria-label="Password" aria-describedby="user-password-addon">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="input-group mb-3">
				<span class="input-group-text" id="user-phone-addon"><i class="bi bi-telephone"></i></span>
				<input type="text" class="form-control"
					   name="user-phone" placeholder="Phone"
					   aria-label="Phone" aria-describedby="user-phone-addon">
			</div>
		</div>
		<div class="col">
			<div class="input-group mb-3">
				<span class="input-group-text" id="user-birthdate-addon"><i class="bi bi-cake"></i></span>
				<input type="date" class="form-control"
					   name="user-birthdate" title="Дата народження"
					   aria-label="Дата народження" aria-describedby="user-birthdate-addon">
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col">
			<div class="form-check">
				<input class="form-check-input "
						type="checkbox"
						name="agreement"
						value="true"
						id="checkDefault">
				<label class="form-check-label" for="checkDefault">
					Погоджуюсь з <a asp-controller="Home" asp-action="Privacy">правилами сайту</a>
				</label>
			</div>
		</div>
		<div class="col">
			<button class="btn btn-primary" type="submit">Зареєструватись</button>
		</div>	
	</div>	
</form>
